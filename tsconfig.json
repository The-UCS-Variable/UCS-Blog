{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "target": "ES2019",
    "noEmit": true,
    "removeComments": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "moduleResolution": "node"
  },

  "include": ["src/typescript/**/*"],
  "exclude": ["node_modules"]
}
